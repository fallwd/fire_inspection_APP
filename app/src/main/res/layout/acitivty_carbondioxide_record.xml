<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/currency_title" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/deleteHistoryData"
        android:fontFamily="PingFangSC-Regular"
        android:background="@drawable/listview_border_margin"
        android:text="删除"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textSize="16dp" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/exportData"
        android:fontFamily="PingFangSC-Regular"
        android:background="@drawable/listview_border_margin"
        android:text="导出"
        android:textColor="#000000"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-30dp"
        android:textAlignment="center"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/xt_l"
        android:visibility="gone"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统位号："
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/sys_number_ed1"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保护区域："
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/protect_area_ed1"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/listview_border_margin">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_f1f1f1"
                android:text=" 编       辑 "
                android:textSize="16sp" />
            <Button
                android:id="@+id/newNext"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/bg_f1f1f1"
                android:text=" 新      建 "
                android:textSize="16sp" />
            <Button
                android:id="@+id/oldDataNext"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_f1f1f1"
                android:text=" 基于历史数据新建 "
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>