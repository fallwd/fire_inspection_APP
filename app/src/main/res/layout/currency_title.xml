<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/iv_finish_onclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dp"> <!-- 设置点击监听器 -->

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleX="0.6"
            android:scaleY="1.6"
            android:background="@mipmap/left_icon" />

</RelativeLayout>



    <TextView
        android:id="@+id/tv_inspection_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/home_annual_fire_inspection"
        android:textColor="@color/title_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/isShowTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp">
        <LinearLayout
            android:id="@+id/sys_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统位号："
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sys_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位号显示区"
                android:textColor="@color/title_black"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/sys_number_ed"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/protect_area"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保护区域："
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/protect_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保护区域显示区"
                android:textColor="@color/title_black"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/protect_area_ed"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_date"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查时间："
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/check_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查时间显示区"
                android:textColor="@color/title_black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
