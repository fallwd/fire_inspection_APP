<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="系统位号"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="系统位置"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="系统组件外观是否良好"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="系统组件是否完整"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="铭牌和标志牌是否清晰"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="手动操作装置的防护罩，铅封和安全标志是否完整"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="药剂储瓶压力/重量是否合格"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="驱动气瓶压力是否合格"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="可燃物的种类、分布情况是否符合设计规定"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="预制灭火系统的设备状态和运行状况是否正常"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="防护区的开口情况是否符合设计规定"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />





    <TextView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="储存装置间的设备、灭火剂输送管道和支、吊架的固定是否牢靠"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="连接管是否出现变形、裂纹及老化"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />





    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="是否声光报警"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="启动输出端负载是否响应"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="保护区防风火闸是否动作"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="其他设备是否联动"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="主备切换功能是否正常"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="中控是否有信号反馈"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />





    <TextView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="第一个探测器动作 火灾盘是否报警"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="第二个探测器动作，启动输出端负载是否响应，相关设备是否动作"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="延迟时间是否符合规定"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="中控是否有信号反馈"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="主备切换功能是否正常"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="气溶胶灭火器是否在有效期"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="隐患描述"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="照片"
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="删除"
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>