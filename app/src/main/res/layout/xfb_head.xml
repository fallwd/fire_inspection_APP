<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="628dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="柴油消防泵"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="560dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="电动消防泵"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="柴油机是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="柴油原料是否充足"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="润滑油和冷却介质液位是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="启动电池状况是否良好"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="控制箱各状态灯是否正常"
                android:textAlignment="center"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="F&amp;GS盘是否有故障报警"
                android:textAlignment="center"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="运转是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />



            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:text="流量压力是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!--   合并单元格-->

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:gravity="center_vertical"
                android:text="外观是否良好"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="润滑油液位是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:gravity="center_vertical"
                android:text="控制箱各状态灯是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="F&amp;GS盘是否有故障报警"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:text="运转是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:text="流量压力是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                tools:ignore="RtlCompat"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="主备切换功能是否正常"
                android:textColor="@color/title_black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="隐患描述"
        android:textColor="@color/title_black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="照片"
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="删除"
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>