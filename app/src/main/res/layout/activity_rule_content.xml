<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessParent">

                <ImageButton
                    android:id="@+id/backHome"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/left_icon"
                    android:scaleType="fitXY"
                    android:contentDescription="TODO" />

                <AutoCompleteTextView
                    android:id="@+id/seach_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_report"
                    android:completionThreshold="1"
                    android:hint="输入报告名称"
                    android:imeOptions="actionSearch"
                    android:maxLength="80"
                    android:dropDownHeight="250dp"
                    android:dropDownWidth="match_parent"
                    android:singleLine="true"
                    android:textColor="#317F6D"
                    android:textColorHint="#317F6D"
                    android:drawableLeft="@mipmap/search"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textcont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="PingFangSC-Regular"
            android:textColor="#000000"
            android:textSize="20sp" />
        <ListView
            android:id="@+id/law_content_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/listview_border"
            >
        </ListView>
</LinearLayout>